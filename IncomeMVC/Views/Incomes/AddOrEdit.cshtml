@model IncomeMVC.Models.mvcIncomeModel
@{
    ViewBag.Title = "AddOrEdit";
}
<br/>
<br/>
    <div class="form-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.IncomeID)
            <div class="form-group">
                @Html.Label("Day")
                @Html.EditorFor(model => model.IncomeDay)
                @Html.ValidationMessageFor(model => model.IncomeDay)
            </div>
            <div class="form-group">
                @Html.Label("Income Amount")
                @Html.EditorFor(model => model.IncomeAmount)
                @Html.ValidationMessageFor(model => model.IncomeAmount)
            </div>
            <div class="form-group">
                @Html.Label("Order No")
                @Html.EditorFor(model => model.OrderNo)
                @Html.ValidationMessageFor(model => model.OrderNo)
            </div>
            <div class="form-group">
                @Html.Label("Month and Year")
                @Html.EditorFor(model => model.MonthYear)
                @Html.ValidationMessageFor(model => model.MonthYear)
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn button" />
                <input type="reset" value="Reset" class="btn button" />

            </div>
                }
            </div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    }